<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/update_corner_radius"/>
            <solid android:color="@color/update_pink_dark"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/update_pink_dark_alpha60"/>
            <corners android:radius="@dimen/update_corner_radius"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/update_pink"/>
            <corners android:radius="@dimen/update_corner_radius"/>
        </shape>
    </item>
</selector>
