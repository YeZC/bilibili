<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#0cb273" android:endColor="#0cb273" android:angle="90"/>
            <stroke android:width="2dp" android:color="#0cb273"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="@color/sobot_btn_send_selector_color" android:endColor="@color/sobot_btn_send_selector_color" android:angle="90"/>
            <stroke android:width="2dp" android:color="@color/sobot_btn_send_selector_color"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>
