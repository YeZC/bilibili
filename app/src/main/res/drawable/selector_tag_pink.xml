<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/corner_radius"/>
            <padding android:left="@dimen/item_half_spacing" android:top="4dp" android:right="@dimen/item_half_spacing" android:bottom="4dp"/>
            <solid android:color="@color/theme_color_primary_trans"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="0.5dp" android:color="@color/theme_color_primary"/>
            <padding android:left="@dimen/item_half_spacing" android:top="4dp" android:right="@dimen/item_half_spacing" android:bottom="4dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="0.5dp" android:color="@color/gray_light"/>
            <padding android:left="@dimen/item_half_spacing" android:top="4dp" android:right="@dimen/item_half_spacing" android:bottom="4dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</selector>
