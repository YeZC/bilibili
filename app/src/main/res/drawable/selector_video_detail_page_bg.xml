<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp"/>
            <padding android:left="11dp" android:top="8dp" android:right="11dp" android:bottom="8dp"/>
            <stroke android:width="1dp" android:color="@color/theme_color_secondary"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="4dp"/>
            <padding android:left="11dp" android:top="8dp" android:right="11dp" android:bottom="8dp"/>
            <stroke android:width="1dp" android:color="@color/theme_color_secondary"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="4dp"/>
            <stroke android:width="0.5dp" android:color="@color/video_detail_page_border_color"/>
            <padding android:left="11dp" android:top="8dp" android:right="11dp" android:bottom="8dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>
