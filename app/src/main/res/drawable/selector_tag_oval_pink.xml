<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/tag_radius"/>
            <solid android:color="@color/theme_color_secondary"/>
            <size android:height="30dp"/>
            <stroke android:width="0.5dp" android:color="@color/theme_color_secondary"/>
            <padding android:left="10dp" android:right="10dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/tag_radius"/>
            <solid android:color="@color/Wh0_u"/>
            <size android:height="30dp"/>
            <stroke android:width="0.5dp" android:color="@color/theme_color_secondary"/>
            <padding android:left="10dp" android:right="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/tag_radius"/>
            <solid android:color="@color/Ga0"/>
            <size android:height="30dp"/>
            <stroke android:width="0.5dp" android:color="@color/Ga4"/>
            <padding android:left="10dp" android:right="10dp"/>
        </shape>
    </item>
</selector>
