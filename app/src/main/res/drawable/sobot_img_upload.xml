<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="@color/sobot_color_bottom_bg" android:endColor="@color/sobot_color_bottom_bg" android:angle="90"/>
            <stroke android:width="1dp" android:color="#d3d3d3"/>
            <corners android:radius="30dp"/>
            <padding android:left="15dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#d9dadc" android:endColor="#d9dadc" android:angle="90"/>
            <stroke android:width="1dp" android:color="#d3d3d3"/>
            <corners android:radius="30dp"/>
            <padding android:left="15dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>
</selector>
