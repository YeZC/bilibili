<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/sponsor_bb_rect_color"/>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="1dp" android:color="@color/bangumi_pay_1"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/sponsor_bb_rect_color"/>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="1dp" android:color="@color/bangumi_pay_1"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/sponsor_bb_rect_color"/>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="0.5dp" android:color="@color/gray_light_1"/>
        </shape>
    </item>
</selector>
