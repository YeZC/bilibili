<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gray_dark_alpha26"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:state_activated="true">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="0.5dp" android:color="@color/theme_color_secondary"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="0.5dp" android:color="@color/daynight_color_dividing_line"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
