<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:radius="2dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="0.5dp" android:color="@color/Ga4"/>
        </shape>
    </item>
    <item android:state_selected="true" android:drawable="@drawable/playset_music_btn_gray"/>
    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:radius="2dp"/>
            <solid android:color="@color/theme_color_secondary_dark"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:radius="2dp"/>
            <solid android:color="@color/theme_color_secondary"/>
        </shape>
    </item>
</selector>
