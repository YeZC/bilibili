<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/daynight_color_background_card"/>
            <stroke android:width="0.5dp" android:color="@color/theme_color_secondary"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/daynight_color_background_card"/>
            <stroke android:width="0.5dp" android:color="@color/daynight_color_text_supplementary_light"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
