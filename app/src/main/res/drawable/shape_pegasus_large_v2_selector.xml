<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/black_alpha40" android:endColor="@android:color/transparent" android:angle="270"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/corner_radius_medium" android:topRightRadius="@dimen/corner_radius_medium"/>
            <gradient android:startColor="@color/black_alpha40" android:endColor="@android:color/transparent" android:angle="270"/>
        </shape>
    </item>
</selector>
