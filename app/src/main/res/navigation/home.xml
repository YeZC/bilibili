<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/nav_title">

    <fragment
        android:id="@+id/nav_title"
        android:name="com.yzc.bilibili.arch.view.fragment.NavTitleFragment"
        android:label="Title"
        tools:layout="@layout/fragment_title">
        <action
            android:id="@+id/action_nav_title_to_nav_about"
            app:destination="@id/nav_about" />
    </fragment>
    <fragment
        android:id="@+id/nav_about"
        android:name="com.yzc.bilibili.arch.view.fragment.NavAboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
</navigation>