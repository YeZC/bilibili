<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_bar_container"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@drawable/base_search_bar_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/base_icon_search" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/search_edit"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@null"
        android:focusable="true"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/Ga4"
        android:textCursorDrawable="@null"
        android:textSize="14dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/search_clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/base_icon_clear"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/search_pic_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/base_icon_search_camera"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
